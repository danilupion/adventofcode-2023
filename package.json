{
    "name": "adventofcode-2023",
    "version": "1.0.0",
    "author": "danilupion <danilupion@gmail.com>",
    "type": "module",
    "license": "MIT",
    "prviate": true,
    "scripts": {
        "prettify": "prettier --write  \"./src/**/*.{js,json}\"",
        "lint": "eslint -c .eslintrc.cjs 'src/**/*.js'",
        "lint:fix": "eslint -c .eslintrc.cjs 'src/**/*.js' --fix",
        "prepare": "husky install",
        "1-1": "node src/challenges/1/part1/solution.js",
        "1-2": "node src/challenges/1/part2/solution.js"
    },
    "devDependencies": {
        "eslint": "^8.54.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0",
        "prettier": "^3.1.0"
    },
    "lint-staged": {
        "src/**/*.{js}": [
            "yarn prettify",
            "yarn lint:fix --max-warnings=0"
        ]
    }
}
